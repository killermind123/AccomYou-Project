<%- layout("layouts/boilerplate.ejs") %>

<body>
  <div class="container mt-4 mb-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        
        <h1 class="text-center mb-4">Create New Listing</h1>

        <form method="POST" action="/listings/new" novalidate class="needs-validation" enctype="multipart/form-data">
          
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="listing[title]" placeholder="Enter title" class="form-control" required>
            <div class="valid-feedback">Title looks good.</div>
            <div class="invalid-feedback">Please enter a valid title.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="listing[description]" class="form-control" rows="4" placeholder="Write a short description..." required></textarea>
            <div class="valid-feedback">Description looks good.</div>
            <div class="invalid-feedback">Please enter a valid description.</div>
          </div>

          <!-- Image Upload -->
          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" id="image" name="listing[image]" class="form-control">
          </div>

          <!-- Facilities -->
          <div class="mb-3">
            <label class="form-label">Facilities</label>
            <div class="facilities-container d-flex flex-wrap gap-2">
              <label><input type="checkbox" name="facilities[]" value="Wifi"> Wifi</label>
              <label><input type="checkbox" name="facilities[]" value="Pool"> Pool</label>
              <label><input type="checkbox" name="facilities[]" value="Parking"> Parking</label>
              <label><input type="checkbox" name="facilities[]" value="Gym"> Gym</label>
              <label><input type="checkbox" name="facilities[]" value="Air Conditioning"> Air Conditioning</label>
              <label><input type="checkbox" name="facilities[]" value="Kitchen"> Kitchen</label>
            </div>
          </div>

          <!-- Price and Location -->
          <div class="row">
            <div class="col-12 col-md-4 mb-3">
              <label for="price" class="form-label">Price (GBP)</label>
              <input type="number" id="price" name="listing[price]" placeholder="e.g., 120" class="form-control" min="0" required>
              <div class="valid-feedback">Price looks good.</div>
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <div class="col-12 col-md-8 mb-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" id="location" name="listing[location]" placeholder="e.g., London" class="form-control" required>
              <div class="valid-feedback">Location looks good.</div>
              <div class="invalid-feedback">Please enter a valid location.</div>
            </div>
          </div>

          <!-- Country -->
          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" id="country" name="listing[country]" placeholder="e.g., United Kingdom" class="form-control" required>
            <div class="valid-feedback">Country looks good.</div>
            <div class="invalid-feedback">Please enter a valid country.</div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button class="btn btn-dark mt-3" type="submit">Create Listing</button>
          </div>

        </form>
      </div>
    </div>
  </div>

  <!-- Link external CSS and JS -->
  
</body>
