<%- layout("layouts/boilerplate.ejs") %>

<body>
  <div class="container mt-5 mb-5">
    <!-- Profile Header -->
    <div class="profile-header card shadow-sm border-0 p-4 text-center text-md-start">
      <div class="d-flex flex-column flex-md-row align-items-center gap-4">
        <img src="<%= currentUser.avatar || '/images/default-avatar.png' %>" 
             alt="User Avatar" 
             class="rounded-circle profile-avatar">

        <div>
          <h2 class="fw-bold mb-1"><%= currentUser.username %></h2>
          <p class="text-muted mb-2"><%= currentUser.email %></p>
          <span class="badge bg-success">Active Member</span>
        </div>
      </div>
    </div>

    <!-- Profile Info -->
    <div class="card shadow-sm border-0 mt-4 p-4">
      <h4 class="mb-3">Account Details</h4>
      <div class="row gy-3">
        <div class="col-md-6">
          <p class="mb-1 text-muted">Username</p>
          <p class="fw-semibold"><%= currentUser.username %></p>
        </div>
        <div class="col-md-6">
          <p class="mb-1 text-muted">Email</p>
          <p class="fw-semiabold"><%= currentUser.email %></p>
        </div>
        <div class="col-md-6">
          <p class="mb-1 text-muted">Joined</p>
          
        </div>
        <div class="col-md-6">
          <p class="mb-1 text-muted">Listings</p>
          <p class="fw-semibold"><%= listings.length %></p>
        </div>
      </div>

      
    </div>

    <!-- User Listings -->
    <div class="mt-5">
      <h4 class="mb-3">Your Listings</h4>
      <% if (listings && listings.length > 0) { %>
        <div class="row gy-4">
          <% listings.forEach(listing => { %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card listing-card border-0 shadow-sm h-100">
                <img src="<%= listing.image.url %>" class="card-img-top rounded-top" alt="<%= listing.title %>">
                <div class="card-body">
                  <h5 class="card-title mb-1"><%= listing.title %></h5>
                  <p class="text-muted small mb-1"><%= listing.location %>, <%= listing.country %></p>
                  <p class="fw-semibold mb-2">Â£<%= listing.price %> / night</p>
                  <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-dark w-100 rounded-pill">View</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-muted">You have not created any listings yet.</p>
      <% } %>
    </div>
  </div>

  <link rel="stylesheet" href="/css/profile.css">
</body>
